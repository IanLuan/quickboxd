{
  "name": "Quickboxd",
  "description": "Chrome extension for quick Letterboxd ratings",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "./background/background.js"
  },
  "action": {
    "default_popup": "./popup/popup.html"
  },
  "permissions": ["storage"]
}